<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.apple.wenxinshare.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动微信"
        android:id="@+id/bt_launch_weixin"
        android:onClick="onclick_Launch_wenxin"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="42dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享到朋友圈"
        android:id="@+id/cb_share_friends"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@id/bt_launch_weixin"
        android:layout_marginEnd="212dp"
        android:checked="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送文本"
        android:id="@+id/bt_seng_text"
        android:layout_below="@+id/bt_launch_weixin"
        android:onClick="onclick_send_text"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二进制图像"
        android:id="@+id/bt_send_binary_image"
        android:layout_below="@id/bt_seng_text"
        android:layout_alignParentStart="true"
        android:onClick="onclick_send_binary_image"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本地图像"
        android:id="@+id/bt_send_local_image"
        android:layout_alignTop="@id/bt_send_binary_image"
        android:layout_toEndOf="@id/bt_send_binary_image"
        android:onClick="onclick_send_local_image"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Url图像"
        android:id="@+id/bt_send_url_image"
        android:layout_alignTop="@id/bt_send_local_image"
        android:layout_toEndOf="@id/bt_send_local_image"
        android:onClick="onclick_send_url_image"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送URL音频"
        android:id="@+id/bt_send_url_audio"
        android:layout_below="@id/bt_send_binary_image"
        android:layout_alignParentStart="true"
        android:onClick="onclick_send_url_audio"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送URL视频"
        android:id="@+id/bt_send_url_video"
        android:layout_below="@+id/bt_send_url_audio"
        android:layout_alignParentStart="true"
        android:onClick="onclick_send_url_video"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送URL"
        android:id="@+id/bt_send_url"
        android:layout_below="@+id/bt_send_url_video"
        android:layout_alignParentStart="true"
        android:onClick="onclick_send_url"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送表情"
        android:id="@+id/bt_send_Emotion"
        android:layout_below="@+id/bt_send_url"
        android:layout_alignParentStart="true"
        android:onClick="onclick_send_emotion"/>

</RelativeLayout>